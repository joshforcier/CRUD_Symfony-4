{% extends 'base.html.twig' %}

{% block title %}Test Article{% endblock %}

{% block body %}

    {% if articles %}
        <p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Article Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.title }}</td>
                            <td>
                                <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                            </td>
                        </tr>

                    {% endfor %}
                </tbody>
            </table>
        </p>
    {% else %}
        <p>No articles to display</p>
    {% endif %}

{% endblock %}